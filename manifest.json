{
  "manifest_version": 3,
  "name": "Comparador Falabella & ML",
  "version": "1.0.0",
  "description": "Compara precios entre Falabella y MercadoLibre autom√°ticamente.",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.falabella.com.pe/*",
    "https://listado.mercadolibre.com.pe/*",
    "https://www.mercadolibre.com.pe/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": ["https://www.falabella.com.pe/*"],
      "resources": ["content/falabella.js"]
    },
    {
      "matches": [
        "https://listado.mercadolibre.com.pe/*",
        "https://www.mercadolibre.com.pe/*"
      ],
      "resources": ["content/meli.js"]
    }
  ]
}